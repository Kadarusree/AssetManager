<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        android:layout_weight="0.05">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.73"
            android:text="Something"
            android:gravity="right|center"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_header"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.27"
            android:text="3.0.0.0"
            android:gravity="right|center"
            android:textSize="@dimen/dp_12"
            android:textColor="#92A8AC"
            android:layout_marginRight="@dimen/dp_5"
            android:id="@+id/tv_version"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.95"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_3"
            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_5"
                android:layout_margin="@dimen/dp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.75"
                        android:padding="@dimen/dp_15"
                        android:src="@drawable/ic_calculator" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:gravity="top|center"
                        android:text="@string/audit"
                        android:textSize="@dimen/dp_15"
                        android:textStyle="normal"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dp_5"
                android:layout_weight="0.25"
                android:elevation="@dimen/dp_3"
                android:onClick="register"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.75"
                        android:padding="@dimen/dp_15"
                        android:src="@drawable/membership" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:gravity="top|center"
                        android:text="@string/register"
                        android:textSize="@dimen/dp_15"
                        android:textStyle="normal"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:elevation="@dimen/dp_3"
                android:layout_margin="@dimen/dp_5"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.75"
                        android:padding="@dimen/dp_15"
                        android:src="@drawable/time" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:gravity="top|center"
                        android:text="@string/checkout"
                        android:textSize="@dimen/dp_15"
                        android:textStyle="normal"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dp_5"
                android:layout_weight="0.25"
                android:elevation="@dimen/dp_3"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.75"
                        android:padding="@dimen/dp_15"
                        android:src="@drawable/ic_saw" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:gravity="top|center"
                        android:text="@string/settings"
                        android:textSize="@dimen/dp_15"
                        android:textStyle="normal"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_3"
            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_5"
                android:layout_margin="@dimen/dp_5"
                android:onClick="searchClick">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.75"
                        android:padding="@dimen/dp_15"
                        android:src="@drawable/research" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:gravity="top|center"
                        android:text="@string/search"
                        android:textSize="@dimen/dp_15"
                        android:textStyle="normal"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dp_5"
                android:layout_weight="0.25"
                android:elevation="@dimen/dp_3"
                app:cardCornerRadius="@dimen/dp_8"
                android:onClick="transfer"
                app:cardElevation="@dimen/dp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.75"
                        android:padding="@dimen/dp_15"
                        android:src="@drawable/ic_transfer" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:gravity="top|center"
                        android:text="@string/transfer"
                        android:textSize="@dimen/dp_15"
                        android:textStyle="normal"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:elevation="@dimen/dp_3"
                android:layout_margin="@dimen/dp_5"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.75"
                        android:padding="@dimen/dp_15"
                        android:src="@drawable/ic_shopping_cart" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:gravity="top|center"
                        android:text="@string/presence"
                        android:textSize="@dimen/dp_15"
                        android:textStyle="normal"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dp_5"
                android:layout_weight="0.25"
                android:elevation="@dimen/dp_3"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.75"
                        android:padding="@dimen/dp_15"
                        android:src="@drawable/exit" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:gravity="top|center"
                        android:text="@string/logout"
                        android:textSize="@dimen/dp_15"
                        android:textStyle="normal"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>